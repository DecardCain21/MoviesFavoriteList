<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/purple_200"
    android:paddingStart="16dp"
    android:paddingTop="3dp"
    android:paddingEnd="16dp"
    android:paddingBottom="3dp">


    <ImageView
        android:id="@+id/filmone"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/filmone" />


    <TextView
        android:id="@+id/tvname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:fontFamily="@font/myriad_pro"
        android:lineSpacingExtra="-9.5sp"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@id/guidelinemiddle"
        app:layout_constraintEnd_toStartOf="@id/filmone"

        tools:text="xXx: Return of Xander Cage (2017)" />

    <ImageView
        android:id="@+id/ivimdbone"
        android:layout_width="34.5dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/filmone"
        app:layout_constraintTop_toBottomOf="@id/tvname"
        app:srcCompat="@drawable/download" />

    <TextView
        android:id="@+id/tvamdbone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="9.3dp"
        android:text="7.2"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ivimdbone"
        app:layout_constraintTop_toBottomOf="@id/tvname" />

    <ImageView
        android:id="@+id/ivimdbtwo"
        android:layout_width="34.5dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvamdbone"
        app:layout_constraintTop_toBottomOf="@id/tvname"
        app:srcCompat="@drawable/download_copy" />

    <TextView
        android:id="@+id/tvamdbtwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="9dp"
        android:text="9.1"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ivimdbtwo"
        app:layout_constraintTop_toBottomOf="@id/tvname" />

    <ImageView
        android:id="@+id/ivmetacritic"
        android:layout_width="16.5dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="21.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvamdbtwo"
        app:layout_constraintTop_toBottomOf="@id/tvname"
        app:srcCompat="@drawable/metacritic_svg" />

    <TextView
        android:id="@+id/tvmetacritic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="7.3dp"
        android:text="8.3"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ivmetacritic"
        app:layout_constraintTop_toBottomOf="@id/tvname" />

    <View
        android:id="@+id/separator_middle"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/starone"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:adjustViewBounds="true"
        android:src="@drawable/star_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/eyeone"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="12dp"
        android:layout_toStartOf="@id/starone"
        android:scaleType="centerInside"
        android:src="@drawable/eye_1"
        app:layout_constraintStart_toEndOf="@id/starone"
        app:layout_constraintTop_toTopOf="@id/starone" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinemiddle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />


</androidx.constraintlayout.widget.ConstraintLayout>